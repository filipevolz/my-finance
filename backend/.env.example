# Database
# URL de conexão com o banco de dados PostgreSQL
DATABASE_URL='postgresql://user:password@host:port/database?sslmode=require'

# Server
# Porta em que o servidor irá rodar
PORT=3000
# URL do frontend para CORS e links de email
FRONTEND_URL=http://localhost:5173

# JWT Authentication
# Chave secreta para assinar tokens JWT (MUDE EM PRODUÇÃO!)
JWT_SECRET=your-secret-key-change-in-production
# Tempo de expiração do token JWT (ex: 7d, 24h, 1h)
JWT_EXPIRES_IN=7d

# Email Configuration (SMTP)
# Host do servidor SMTP
SMTP_HOST=smtp.gmail.com
# Porta do servidor SMTP (587 para TLS, 465 para SSL)
SMTP_PORT=587
# Email do remetente
SMTP_USER=your-email@gmail.com
# Senha do aplicativo (não use a senha normal do Gmail, crie uma senha de app)
SMTP_PASS=your-app-password
# Email que aparecerá como remetente (pode ser igual ao SMTP_USER)
SMTP_FROM=your-email@gmail.com

# Asset Provider Configuration
# Provedor de dados de assets
# Opções: DATABASE (banco local), DADOS_MERCADO (API Dados de Mercado), B3 (API B3), BRAPI (brapi.dev), ALPHA_VANTAGE (Alpha Vantage)
ASSET_PROVIDER=DATABASE

# API Keys for External Asset Providers
# brapi.dev token (opcional, mas recomendado para mais requisições)
# Obtenha em: https://brapi.dev/
BRAPI_TOKEN=

# Alpha Vantage API Key (opcional, requer cadastro gratuito)
# Obtenha em: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=
